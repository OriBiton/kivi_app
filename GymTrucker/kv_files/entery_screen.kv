<EnteryScreen>:
    FloatLayout:
        # לוגו בצד שמאל למעלה
        Image:
            source: 'images/logo.png'
            size_hint: None, 0.18
            pos_hint: {'x': 0.05, 'top': 1}

        # ברכת "Welcome back"
        Label:
            id: welcome_label
            text: "Welcome back " + root.first_name
            size_hint_y: None
            font_size: root.height * 0.015
            pos_hint: {'center_x': 0.5, 'top': 1}
            color: 0, 0, 0, 1  # צבע שחור (RGBA)

        # כפתור "Which muscles are we working on today?"
        MDRaisedButton:
            id: muscle_button
            text: "Which muscles are we working on today?"
            font_size: str(int(self.height * 0.25))
            size_hint: 0.5, 0.05
            pos_hint: {'center_x': 0.5, 'top': 0.9}
            on_release: root.open_muscle_list()

        # תווית להצגת השרירים שנבחרו
        Label:
            id: muscle_selection_label
            text: "Selected muscles: "
            font_size: root.height * 0.015  # גודל פונט תלוי בגובה המסך
            size_hint_y: None
            height: self.texture_size[1]  # הגובה של התווית יתאם לאורך הטקסט
            text_size: self.width, None  # מכוון את התווית להתפצל לשורות לפי הצורך
            pos_hint: {'center_x': 0.5, 'top': 0.8}
            color: 0, 0, 0, 1  # צבע שחור (RGBA)
            halign: 'center'  # מיישר את הטקסט למרכז


        MDRaisedButton:
            text: "Review Analysis"
            size_hint: None, None
            size: "200dp", "50dp"
            font_size: str(int(self.height * 0.25))
            pos_hint: {"center_x": 0.5, "top": 0.6}
            on_press: root.go_to_review_analysis_screen()


        # כפתור התחלת אימון
        MDRaisedButton:
            text: "Start Training"
            size_hint: 0.5, 0.05
            font_size: str(int(self.height * 0.25))
            pos_hint: {'center_x': 0.5, 'top': 0.75}
            on_press: root.start_training()

        # Popular Training Programs
        Label:
            text: "Popular Training Programs:"
            font_size: root.height * 0.04
            size_hint_y: None
            height: 40
            pos_hint: {'center_x': 0.5, 'top': 0.4}
            color: 0, 0, 0, 1  # צבע שחור (RGBA)

        # שורת כפתורים 1 (גב וחזה, כתפיים וידיים, רגליים)
        GridLayout:
            cols: 3
            size_hint_y: None
            height: 100
            pos_hint: {'center_x': 0.5, 'top': 0.3}
            Button:
                text: "Back & Chest"
                on_press: root.select_training("Back & Chest")
            Button:
                text: "Shoulders & Arms"
                on_press: root.select_training("Shoulders & Arms")
            Button:
                text: "Legs"
                on_press: root.select_training("Legs")

        # שורת כפתורים 2 (Push, Pull, Chest)
        GridLayout:
            cols: 3
            size_hint_y: None
            height: 100
            pos_hint: {'center_x': 0.5, 'top': 0.2}
            Button:
                text: "Push"
                on_press: root.select_training("Push")
            Button:
                text: "Pull"
                on_press: root.select_training("Pull")
            Button:
                text: "Chest"
                on_press: root.select_training("Chest")

        # שורת כפתורים 3 (Arms, Shoulders, Back)
        GridLayout:
            cols: 3
            size_hint_y: None
            height: 100
            pos_hint: {'center_x': 0.5, 'top': 0.1}
            Button:
                text: "Arms"
                on_press: root.select_training("Arms")
            Button:
                text: "Shoulders"
                on_press: root.select_training("Shoulders")
            Button:
                text: "Back"
                on_press: root.select_training("Back")
