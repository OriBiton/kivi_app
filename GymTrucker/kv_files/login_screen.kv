<LoginScreen>:
    username_input: username_input
    password_input: password_input

    FloatLayout:
        canvas.before:
            Rectangle:
                source: 'images/logo.png'  # ודא שהתמונה נמצאת בתיקיית images
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 400, 300
            spacing: 20
            pos_hint: {'x': 0.05, 'y': 0.05}

            Label:
                text: "Username:"
                size_hint_y: None
                height: 30
                color: 1, 1, 1, 1

            MDTextField:
                id: username_input  # שיוך ה-ID
                hint_text: "Enter username"
                size_hint_y: None
                height: 40

            Label:
                text: "Password:"
                size_hint_y: None
                height: 30
                color: 1, 1, 1, 1

            MDTextField:
                id: password_input  # שיוך ה-ID
                hint_text: "Enter password"
                password: True
                size_hint_y: None
                height: 40

            MDRaisedButton:
                text: "Login"
                size_hint_y: None
                height: 50
                on_press: root.login_user()

