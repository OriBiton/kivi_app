<ReviewAnalysisScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: "Training Review Analysis"
            font_size: "24sp"
            size_hint_y: None
            height: "50dp"
            color: 0, 0, 0, 1  # צבע שחור (RGBA)
        
        Widget:
            id: graph_container
            size_hint_y: 0.6  # תופס את כל הגובה
            size_hint_x: 1  # תופס את כל הרוחב
            allow_stretch: True  # תאפשר לתמונה להתאים את עצמה לגודל

        MDRaisedButton:
            text: "Back"
            size_hint: None, None
            size: "200dp", "50dp"
            pos_hint: {"center_x": 0.1, "center_y": 0.3}
            on_press: root.go_back_to_entry_screen()
